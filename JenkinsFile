
pipeline{
    agent any
    stages{
        stage("Environment Set Up "){
            steps{
                echo "========Installing Dependencies ========"
                bat "npm install"
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
        stage("Specification testing"){
            steps{
                echo "========Specification testing========"
                //bat "npx swagger-diff ./API/swagger.1.yaml ./API/swagger.yaml"
                script {
                    call(){
                    def lastSuccess = currentBuild.getProject().getLastSuccessfulBuild().getNumber() ;
                    echo lastSuccess;
                    }

                }

            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                    
                    archiveArtifacts artifacts: 'API/swagger.yaml', fingerprint: true
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }        
        stage("Application Building"){
            steps{
                echo "========executing A========"
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
         stage("E2E"){
            steps{
                echo "========executing A========"
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }       
         stage("Report"){
            steps{
                echo "========executing A========"
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }  
        
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}